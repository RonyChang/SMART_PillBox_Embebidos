<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.InfoFragment">

    <androidx.cardview.widget.CardView
        android:id="@+id/ellipse_1"
        android:layout_width="246dp"
        android:layout_height="246dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="39dp"
        android:background="#FFFFFF"
        app:cardCornerRadius="123dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@mipmap/profile_photo" />

    </androidx.cardview.widget.CardView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="309dp"
        android:layout_gravity="center_horizontal"
        android:text="Proyecto Sistemas Embebidos"
        android:textAppearance="@style/Name_config"/>

    <FrameLayout
        android:id="@+id/github_layout"
        android:layout_width="230dp"
        android:layout_height="60dp"
        android:layout_marginTop="382dp"
        android:background="@drawable/content_background"
        android:layout_gravity="center_horizontal"
        android:clickable="true"
        android:elevation="10dp"
        android:focusable="true">

        <ImageView
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="8dp"
            android:scaleType="centerCrop"
            android:src="@drawable/github"
            android:contentDescription="RonyChang" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="74dp"
            android:text="@string/Name_user"
            android:textAppearance="@style/Style_Gretting"/>
    </FrameLayout>

    <FrameLayout
        android:id="@+id/correoRony"
        android:layout_width="260dp"
        android:layout_height="60dp"
        android:layout_marginTop="465dp"
        android:background="@drawable/content_background"
        android:layout_gravity="center_horizontal"
        android:clickable="true"
        android:elevation="10dp"
        android:focusable="true">

        <ImageView
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="8dp"
            android:scaleType="centerCrop"
            android:src="@drawable/gmail"
            android:contentDescription="@string/Content_description_imageTop" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="74dp"
            android:text="rchangc@uni.pe"
            android:textAppearance="@style/Style_Gretting"/>

    </FrameLayout>

    <FrameLayout
        android:id="@+id/correoRenatto"
        android:layout_width="260dp"
        android:layout_height="60dp"
        android:layout_marginTop="548dp"
        android:background="@drawable/content_background"
        android:layout_gravity="center_horizontal"
        android:clickable="true"
        android:elevation="10dp"
        android:focusable="true">

        <ImageView
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="8dp"
            android:scaleType="centerCrop"
            android:src="@drawable/gmail"
            android:contentDescription="@string/Content_description_imageTop" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="74dp"
            android:text="luis.canchaya.m@uni.pe"
            android:textAppearance="@style/Style_Gretting"/>

    </FrameLayout>

</FrameLayout>