<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/id_home_fragment">

    <fragment
        android:id="@+id/id_home_fragment"
        android:name="com.example.pillbox_emb.fragments.HomeFragment"
        android:label="fragment_home"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/ir_a_agregar_plan"
            app:destination="@id/agregarPlanFragment" />
    </fragment>
    <fragment
        android:id="@+id/id_info_fragment"
        android:name="com.example.pillbox_emb.fragments.InfoFragment"
        android:label="fragment_info"
        tools:layout="@layout/fragment_info" />
    <fragment
        android:id="@+id/id_settings_fragment"
        android:name="com.example.pillbox_emb.fragments.SettingsFragment"
        android:label="fragment_settings"
        tools:layout="@layout/fragment_settings" />
    <fragment
        android:id="@+id/id_edit_fragment"
        android:name="com.example.pillbox_emb.fragments.EditFragment"
        android:label="fragment_edit"
        tools:layout="@layout/fragment_edit" />
    <fragment
        android:id="@+id/agregarPlanFragment"
        android:name="com.example.pillbox_emb.fragments.AgregarPlanFragment"
        android:label="fragment_agregar_plan"
        tools:layout="@layout/fragment_agregar_plan" />
</navigation>